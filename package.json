{
    "name": "@kingga/kc-container",
    "version": "1.0.3",
    "description": "A simple IoC container for the kings collection.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "nyc mocha 'tests/**/*.ts' --require ts-node/register",
        "dev": "webpack --mode development",
        "watch": "webpack --mode development --watch",
        "prod": "webpack --mode production",
        "prepublish": "yarn test && yarn dev"
    },
    "keywords": [
        "IoC",
        "Kings Collection",
        "Container",
        "JavaScript",
        "TypeScript",
        "Container"
    ],
    "author": "Isaac Skelton <contact@isaacskelton.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.5",
        "@types/core-js": "^2.5.2",
        "@types/jest": "^24.0.22",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "cross-env": "^6.0.3",
        "eslint": "^6.4.0",
        "mocha": "^6.2.0",
        "nyc": "^14.1.1",
        "terser-webpack-plugin": "^2.2.1",
        "ts-loader": "^6.1.2",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "include": [
            "src/**/*"
        ],
        "exclude": [
            "**/*/*.d.ts",
            "**/*/*Type.ts"
        ],
        "reporter": [
            "text"
        ],
        "all": true
    }
}
